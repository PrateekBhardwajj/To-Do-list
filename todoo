def task():
   tasks = []

   print("------Welcome to the to-do list----------")
   
   total_tasks = int(input("enter the number of task you want: "))
   for i in range(1,total_tasks+1):
     task_name = input("enter the task names: ")
     tasks.append(task_name)
     
   print(f"total tasks are:{tasks}")
   while True:

    option = int(input("1.add task\n2.update task\n3.delete task\n4.View\n5.Exit\n6.stop"))
    if option == 1:
      new_task= input("type the name of the task: ")
      tasks.append(new_task)
      print("task add successfully")

    elif option == 2:
      update_task = input("enter the name of the tasks you want to update: ")
      if update_task in tasks:
         up = input("enter the new task name")
         ind = tasks.index(update_task)
         tasks[ind]=up
         print("-------task updated successfully-----------")
        
    elif option == 3:
      delete_task = input("enter the task name you want to delete")
      if delete_task in tasks:
         ind = tasks.index(delete_task)
         tasks.delete(delete_task)
         print("-------task deleted successfully----------")

    elif option == 4:
      print(f" all the tasks are:  {tasks}")


    elif option == 5:
      print("Exit...")
    break
   
if __name__ == "__main__":
 task()

      
   